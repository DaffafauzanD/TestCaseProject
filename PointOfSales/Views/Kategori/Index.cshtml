@model IEnumerable<PointOfSales.Models.Context.Kategori>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nama_Kategori)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nama_Kategori)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id_kategori">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id_kategori">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id_kategori">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
